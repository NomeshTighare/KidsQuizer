<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/kids8"
    tools:context=".SelectSub_Activity">


    <TextView
        android:id="@+id/tvStand"
        android:layout_width="400dp"
        android:layout_height="55dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/ic_bg"
        android:paddingLeft="4dp"
        android:paddingTop="7dp"
        android:text="Select Subject :"
        android:textColor="#D17D01"
        android:textSize="27sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_1"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="30dp"
        android:background="#2C9C98"
        android:gravity="left|fill_vertical"
        android:paddingLeft="20dp"
        android:text="English"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tvStand"
        app:layout_constraintStart_toStartOf="@+id/tvStand"
        app:layout_constraintTop_toBottomOf="@+id/tvStand" />

    <TextView
        android:id="@+id/tv_2"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="95dp"
        android:background="#2C9C98"
        android:gravity="left|fill_vertical"
        android:paddingLeft="20dp"
        android:text="Math"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tvStand"
        app:layout_constraintStart_toStartOf="@+id/tvStand"
        app:layout_constraintTop_toBottomOf="@+id/tvStand" />

    <TextView
        android:id="@+id/tv_3"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="160dp"
        android:background="#2C9C98"
        android:gravity="left|fill_vertical"
        android:paddingLeft="20dp"
        android:text="Science"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tvStand"
        app:layout_constraintStart_toStartOf="@+id/tvStand"
        app:layout_constraintTop_toBottomOf="@+id/tvStand" />

    <TextView
        android:id="@+id/tv_4"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="225dp"
        android:background="#2C9C98"
        android:gravity="left|fill_vertical"
        android:paddingLeft="20dp"
        android:text="Hindi"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tvStand"
        app:layout_constraintStart_toStartOf="@+id/tvStand"
        app:layout_constraintTop_toBottomOf="@+id/tvStand" />

    <TextView
        android:id="@+id/tv_5"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="290dp"
        android:background="#2C9C98"
        android:gravity="left|fill_vertical"
        android:paddingLeft="20dp"
        android:text="General Knowledge(GK)"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tvStand"
        app:layout_constraintStart_toStartOf="@+id/tvStand"
        app:layout_constraintTop_toBottomOf="@+id/tvStand" />

    <TextView
        android:id="@+id/tv_6"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="355dp"
        android:background="#2C9C98"
        android:gravity="left|fill_vertical"
        android:paddingLeft="20dp"
        android:text="Riddles"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tvStand"
        app:layout_constraintStart_toStartOf="@+id/tvStand"
        app:layout_constraintTop_toBottomOf="@+id/tvStand" />

    <Button
        android:id="@+id/btn_back2"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="250dp"
        android:text="Previous"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_6" />

    <Button
        android:id="@+id/btn_next2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="93dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="42dp"
        android:text="Next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_back2"
        app:layout_constraintTop_toBottomOf="@+id/tv_6" />

</androidx.constraintlayout.widget.ConstraintLayout>



