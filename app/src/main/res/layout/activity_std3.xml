<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/kids8"
    tools:context=".Std3_Activity">


    <TextView
        android:id="@+id/tvStand"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="160dp"
        android:paddingLeft="4dp"
        android:paddingTop="7dp"
        android:text="Select Subject :"
        android:textAlignment="center"
        android:textColor="#D17D01"
        android:textSize="27sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="#2C9C98"
        android:gravity="left|fill_vertical"
        android:paddingLeft="20dp"
        android:text="English"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tvStand"
        app:layout_constraintStart_toStartOf="@+id/tvStand"
        app:layout_constraintTop_toBottomOf="@+id/tvStand" />

    <TextView
        android:id="@+id/tv_2"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="10dp"
        android:background="#2C9C98"
        android:gravity="left|fill_vertical"
        android:paddingLeft="20dp"
        android:text="Math"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tvStand"
        app:layout_constraintStart_toStartOf="@+id/tvStand"
        app:layout_constraintTop_toBottomOf="@+id/tv_1" />

    <TextView
        android:id="@+id/tv_3"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="#2C9C98"
        android:gravity="left|fill_vertical"
        android:paddingLeft="20dp"
        android:text="General Knowledge(GK)"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tvStand"
        app:layout_constraintStart_toStartOf="@+id/tvStand"
        app:layout_constraintTop_toBottomOf="@+id/tv_2" />


    <TextView
        android:id="@+id/tv_4"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="#2C9C98"
        android:gravity="left|fill_vertical"
        android:paddingLeft="20dp"
        android:text="Science"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tvStand"
        app:layout_constraintStart_toStartOf="@+id/tvStand"
        app:layout_constraintTop_toBottomOf="@+id/tv_3" />
    <Button
        android:id="@+id/btn_back2"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:text="Previous"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_4" />

    <Button
        android:id="@+id/btn_next2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="50dp"
        android:text="Next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_4" />

</androidx.constraintlayout.widget.ConstraintLayout>